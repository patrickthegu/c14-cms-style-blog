<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Fridge Magician</title>
  </head>

  <body>
    <header>
      <div class="container-fluid">
        <div class="row w-100 mx-auto align-items-center text-white">
          <div class="col-3 text-center">
            {{#if logged_in}}
            <a class="nav-link" id="logout" aria-current="page" href="/logout">Logout</a>
            {{/if}}
          </div>
          <div class="col-6 text-center">
            <h1>
              <a class="navbar-brand" href="/">The Tech Blog</a>
            </h1>
          </div>
          {{#if logged_in}}
            <div class="col-3 text-center">
              <a class="nav-link active" aria-current="page" href="/fridge/{{user_id}}"><i class="fa-solid fa-user mx-2"></i>{{current_user}}</a>
            </div>
          {{else}}
            <div class="col-1 text-center border-white">
              <a class="nav-link active" aria-current="page" href="/login">Home</a>
            </div>
            <div class="col-1 text-center">
              <a class="nav-link active" aria-current="page" href="/register">Dashboard</a>
            </div>
          {{/if}}
          </div>
        </div>
      </div>
    </header>

    <div class="container my-5 p-5 content">
      {{{body}}}
    </div>

  </body>

</html>